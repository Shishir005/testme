pipeline {
    agent none

    stages {

        stage ('initialization') {
            agent any

            steps {
                echo 'initialization, '
                    script {

                    sh 'python ./inf.py'

                    }

            }
        }
        stage ('plan') {
            agent any

            steps {
                echo 'plan, '
                    script {

                    sh 'python ./plan.py'

                    }

            }
        }
        stage ('apply') {
            agent any

            steps {
                echo 'apply, '
                    script {

                    sh 'python ./apply.py'

                    }

            }
        }
    }
}